{
  "manifest_version": 3,
  "name": "AI Studio Suite",
  "version": "3.0",
  "description": "Automates prompt execution from a file and adds a button to download the last chat turn in Google AI Studio.",
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open AI Studio Suite"
  },
  "web_accessible_resources": [
    {
      "resources": ["viewer.html", "viewer.css", "viewer.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "css": ["downloader_style.css"],
      "js": ["downloader_script.js"]
    }
  ]
}
