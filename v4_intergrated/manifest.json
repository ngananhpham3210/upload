{
  "manifest_version": 3,
  "name": "Japanese Text Tools",
  "version": "1.1",
  "description": "Extracts Japanese text from JSON files or cleans, filters, and sorts pasted text.",
  "permissions": [
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Japanese Text Tools"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}